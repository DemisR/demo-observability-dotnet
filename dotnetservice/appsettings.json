{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Spring": {
    "Application": {
      "Name": "dotnetservice"
    }
  },
  "management": {
    "tracing": {
      "alwaysSample": true,
      "useShortTraceIds ": true,
      "exporter": {
        "zipkin": {
          "endpoint": "http://zipkin:9411/api/v2/spans",
          "validateCertificates": false,
          "useShortTraceIds ": true
        }
      }
    },
    "Endpoints": {
      "Actuator":{
        "Exposure": {
            "Include": [ "*" ],
            "Exclude": [ "env", "refresh"]
        }
      },
      "Health": {
        "ShowDetails": "Always"
      },
      "Prometheus": {
        "Enabled": true
      }
    }
  },
  "Postgres": {
    "Client": {
      "Host": "database",
      "Port": 5432,
      "Username": "dotnetuser",
      "Password": "dotnetpass",
      "Database": "dotnetdb"

    }
  }
}
